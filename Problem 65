#include <iostream>
#include <string>
#include <vector>
using namespace std;

struct StDate
{
    short Day;
    short Month;
    short Year;
};

string ReadFullDate() 
{
    string FullDate;
    cout << "Please enter date dd/mm/yyyy? ";
    cin >> FullDate;
    return FullDate;
}

vector <string> SplitString(string Text, string Delim)
{
    string Word = "";
    short Position = 0;
    vector <string> vString;

    while ((Position = Text.find(Delim)) != std::string::npos)
    {
        Word = Text.substr(0, Position);
        if (Word != "")
        {
            vString.push_back(Word);
        }
        Text.erase(0, Position + Delim.length());
    }

    if (Text != "")
    {
        vString.push_back(Text);
    }

    return vString;

}

string ReplaceWordInString(string S1, string StringToReplace, string sRepalceTo)
{
    short pos = S1.find(StringToReplace);
    while (pos != std::string::npos)
    {
        S1 = S1.replace(pos, StringToReplace.length(), sRepalceTo);
        pos = S1.find(StringToReplace);//find next   
    } 
    return S1;
} 

StDate StringToDate(string DateString)
{
    StDate Date;
    vector<string> vDate;

    vDate = SplitString(DateString, "/");
    Date.Day = stoi(vDate[0]);
    Date.Month = stoi(vDate[1]);
    Date.Year = stoi(vDate[2]);
    
    return Date;
}

string DateToString(StDate Date)
{
    return to_string(Date.Day) + "/" + to_string(Date.Month) + "/" + to_string(Date.Year);
}

string DateFormat(StDate Date, string DateFormat = "dd/mm/yyyy")
{
    string FormttedDateStrig = "";
    FormttedDateStrig = ReplaceWordInString(DateFormat, "dd", to_string(Date.Day));
    FormttedDateStrig = ReplaceWordInString(FormttedDateStrig, "mm", to_string(Date.Month));
    FormttedDateStrig = ReplaceWordInString(FormttedDateStrig, "yyyy", to_string(Date.Year));

    return FormttedDateStrig;
}

short ReadFromat()
{
    short Format = 0;
    cout << "Enter a format choice: ";
    cin >> Format;
    return Format;
}

int main() 
{
    string DateString = ReadFullDate();
    StDate Date = StringToDate(DateString);

    cout << DateFormat(Date) << endl;
    cout << DateFormat(Date, "yyyy/dd/mm") << endl;
    cout << DateFormat(Date, "mm/dd/yyyy") << endl;
    cout << DateFormat(Date, "mm-dd-yyyy") << endl;
    cout << DateFormat(Date, "dd-mm-yyyy") << endl;
    cout << DateFormat(Date, "Date:dd, Month:mm, Year:yyyy") << endl;
    

    system("pause>0");
    return 0;
}
